@using ScaffoldersProject.Data
@using ScaffoldersProject.Models
@model List<Products>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div>
    @if (Model.Count() == 0)
    {
        <h1 style="color:darkred">No matching Product(s) Found!!!</h1>

    }
    else
    {
        <h4>Search Results</h4>

        <table class="table table-sm table-bordered">
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>View Product</th>
            </tr>
            @foreach (var product in Model)
                {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Category</td>
                    <td>@product.Price.ToString("c")</td>
                    <td>@product.Stock</td>
                    <td>
                        <a asp-area="" asp-controller="Client" asp-action="ViewProduct" class="btn btn-primary" asp-route-productId="@product.ProductId">View</a>
                    </td>
                </tr>
            }
        </table>
    }
</div>
