@model IEnumerable<SaveProductsViewModel>
@{
    ViewData["Title"] = "New Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" action="SaveProducts">
    <table class="table table-responsive table-striped table-bordered">
        <tr>
            <th>
                Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Price
            </th>
            <th>
                Product Quantity
            </th>
            <th>
                Product Category
            </th>
            <th>
                Product Description
            </th>
            <th>
                Approve Product
            </th>
        </tr>
        @foreach (var prod in Model)
        {

            if (!prod.AdminApproved)
            {
                <tr>
                    <td>@prod.ProductId</td>
                    <td>@prod.Products.Name</td>
                    <td>@prod.Products.Price</td>
                    <td>@prod.Products.Quantity</td>
                    <td>@prod.Products.Category</td>
                    <td>@prod.Products.Description</td>
                    <td>
                        <input type="hidden" name="ProductId" value="@prod.ProductId"/>
                        <label><input type="checkbox" name="AdminApproved" value="true"></label>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center"><h2>No new products!</h2></td>
                </tr>
            }
        }
    </table>
    <button class="btn btn-primary" type="submit">Save</button>
</form>

