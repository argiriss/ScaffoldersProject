@model Settings
@{
    ViewData["Title"] = "SetFee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Set Fee</h2>

<form enctype="multipart/form-data" asp-action="SetFee" method="post">
    <div class="form-group">
        <label asp-for="AdminFee"></label>
        <div><span asp-validation-for="AdminFee" class="text-danger"></span></div>
        <input asp-for="AdminFee" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MemberFee"></label>
        <div><span asp-validation-for="MemberFee" class="text-danger"></span></div>
        <input asp-for="MemberFee" class="form-control"/>
    </div>
    <div class="text-center col-sm-12">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>