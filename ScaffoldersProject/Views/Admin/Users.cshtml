@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>User accounts</h4>
<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td><a asp-controller="Admin" asp-action="EditUser" class="btn btn-primary" asp-route-Id="@user.Id">Edit</a>
                <a asp-controller="Admin" asp-action="DeleteUser" data-confirm="Are you sure you want to delete user @user.UserName?" class="btn btn-primary" asp-route-Id="@user.Id">Delete</a>
            </td>
        </tr>
    }
</table>