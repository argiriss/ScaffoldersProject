@model Cart
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-md-8 col-md-offset-1" >
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-right">Subtotal</th>
                        <th class="text-right"><a class="btn btn-danger btn-sm" style="float:right" asp-controller="Cart" asp-action="" asp-route-CartID="@Model.CartId">Clear</a></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Items)
                    {
                        
                        if (item.OrderID==null || item.OrderID==0)
	                    {
		                    <tr>
                                <td>@item.Product.Name</td>
                                <td class="text-center">x @item.Quantity</td>
                                <td class="text-right">@(item.Product.Price * item.Quantity)</td>
                                <td><a class="btn btn-primary btn-sm" style="float:right" asp-controller="Cart" asp-action="RemoveItem" asp-route-ProductID="@item.Product.ProductId">Remove</a></td>
                                <td></td>
                            </tr> 
	                    }
                    }


                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" class="text-right">Total:</td>
                        <td class="text-right">@ViewBag.Total</td>
                    </tr>
                </tfoot>
            </table>
            <div class="text-center">
                <a class="btn btn-success" asp-controller="Order" asp-action="OrderForm" asp-route-CartID="@Model.CartId">Checkout</a>
                <a class="btn btn-primary" asp-controller="Client" asp-action="Index" asp-route-CartID="@Model.CartId">Continue shopping</a>
            </div>
        </div>
    </div>
