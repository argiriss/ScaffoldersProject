@model List<CartOrder>

@{
    ViewData["Title"] = "BuyHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">@User.Identity.Name Buy History</h2>

<table class="table table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>Price</th>
            <th>Quantity</th>
            <th>Date</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Order.OrderDay</td>
        </tr>
    }
</table>